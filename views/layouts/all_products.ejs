<%- include("header") %>

<div class="row products">
    
        <% products.forEach(function(p){ %>
                <div class="col-xs-12 col-md-4 p">
                    <a class="pa" href="/products">
                        <img class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                    </a>
                    <div style = "margin-top: inherit; padding-top: 10px;">
                    <h3><%= p.title %></h3>
                    <h4>Rs. <%= parseFloat(p.price).toFixed(2) %></h4>
                    <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
                </div>
                </div>
            <% }); %>
           
    </div>

<%- include("footer") %>
