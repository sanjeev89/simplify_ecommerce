<%- include("./layouts/header") %>
<br>
<div class="row">
    
    <h1 class="page-header"><%=p.title%></h1>
    

    <div class="col-xs-12 col-md-5">
        <img src="/product_images/<%=p.id%>/<%=p.image%>" alt="" class="spi">
    </div>

    <div class="col-xs-12 col-md-7">
        <p><%= p.desc %></p>
        <p><%= parseFloat(p.price).toFixed(2) %></p>
       
        <% if(loggedIn == true){ %>
            <p><a href = "/cart/add/<%= p.slug %>">Add to cart</a></p>
        <%} else {%>
            <p>You need to login to purchase items</p>
            <a href="/user/login">click to login</a>
        <% } %>
    </div>

    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach(function(image) { %>
                <% if(image!="thumbs") { %>
                <li>
                    <a data-fancybox = "gallery" href="/product_images/<%=p.id%>/gallery/<%=image%>">
                        <img src="/product_images/<%=p.id%>/gallery/thumbs/<%=image%>" alt="">
                    </a>
                </li>
                <% } %>
            <% }) %>
        </ul>
    </div>
</div>

<%- include("./layouts/footer") %>
